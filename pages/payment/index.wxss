/* pages/payment/index.wxss */

.container {
	padding: 32rpx;
}

.user-box {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	align-items: center;
}

.user-box .username {
	font-size: 32rpx;
}

.user-box .rule-box {
	border: 1rpx solid #efeaea;
	padding: 0 8px;
	font-size: 28rpx;
	color: #b5b5b5;
}

.user-box .words {
	padding: 16rpx 0 30rpx 0;
	line-height: 60rpx;
	width: 100%;
	font-size: 26rpx;
	text-align: center;
}

.clock-box {
	background-color: rgb(247, 247, 247);
	border-radius: 8rpx;
	padding: 22rpx 30rpx;
	display: flex;
}

.clock-box .photo {
	width: 200rpx;
	height: 200rpx;
	border-radius: 20rpx;
	margin-right: 20rpx;
}

.clock-box .right .name {
	font-size: 32rpx;
}

.clock-box .timer {
	font-size: 32rpx;
	margin: 40rpx 0 30rpx 0;
}

.time-box {
	background-color: #212a2c;
	padding: 0 10rpx;
	color: white;
	border-radius: 4rpx;
}

.clock-box .right .price {
	font-size: 40rpx;
	color: red;
}

.progress-box {
	margin-bottom: 32rpx;
}

.progress-box .tip {
	text-align: center;
	font-size: 28rpx;
	padding: 18rpx 0;
	color: #8f8f94;
}

.progress-bar {
	height: 20rpx;
	border-radius: 20rpx;
	background: #b6b6b6;
	position: relative;
	overflow: hidden;
}

.progress-bar .progress {
	position: absolute;
	left: 0;
	top: 0;
	height: 100%;
	width: 0%;
	background-color: #4CDA64;
}

.btn {
	border-radius: 120rpx;
	color: white;
}

.btn::after {
	border: 0;
}

.red.btn {
	background-color: #dd524d;
	margin-bottom: 20rpx;
}

.yellow.btn {
	background-color: #f0ad4e;
	margin-bottom: 20rpx;
}

/* 砍价排行榜 */
.rank-list {
	background-color: #FFF9EB;
	margin-top: 60rpx;
	box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.1);
}

.rank-list .title {
	text-align: center;
	font-size: 36rpx;
	padding: 21rpx 0;
	border-radius: 6rpx;
}

.rank-list .li {
	display: flex;
	align-items: center;
	padding: 22rpx 30rpx;
	background-color: white;
	margin-top: 4rpx;
}

.rank-list .li .avatar {
	padding-right: 20rpx;
}

.rank-list .li .avatar image {
	width: 120rpx;
	height: 120rpx;
	border-radius: 100%;
}

.rank-list .li .info {
	flex: 1;
}

.info .name {
	font-size: 32rpx;
	padding-bottom: 30rpx;
}

.info .words {
	font-size: 26rpx;
	color: #888;
}

.rank-list .money {
	font-size: 26rpx;
}
